{
  "name": "rgt-portal",
  "version": "1.0.0",
  "description": "this is the backend for the rgt-portal",
  "main": "index.js",
  "author": "simon",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register --require dotenv/config src/index.ts",
    "dev:staging": "NODE_ENV=staging nodemon --watch src --ext ts --exec ts-node --require dotenv/config src/index.ts",
    "dev:prod": "NODE_ENV=production nodemon --watch src --ext ts --exec ts-node --require dotenv/config src/index.ts",
    "start": "node -r tsconfig-paths/register --require dotenv/config dist/index.js",
    "build": "tsc -p tsconfig.build.json && node copy-assets.js",
    "postbuild": "tsc-alias",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.26.0",
    "@types/node-cron": "^3.0.11",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "connect-redis": "^8.0.1",
    "connect-session-store": "^0.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.5.0",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.0",
    "nodemon": "^3.1.9",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.13.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "socket.io": "^4.8.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.20",
    "typeorm-typedi-extensions": "^0.4.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tsconfig/node-lts": "^22.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.5",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/eslint-plugin": "^1.1.32-beta.1",
    "eslint": "^9.21.0",
    "eslint-plugin-perfectionist": "^4.9.0",
    "prettier": "^3.5.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.6"
  }
}
